                                <ColumnDefinition Width="50"></ColumnDefinition>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <fa:ImageAwesome Icon="Search"
                                             Width="25"
                                             Height="25"
                                             Foreground="#9FA1BE" />
